{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"lib": ["WebWorker", "ESNext"],
		"rootDir": "..",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"],
			"@shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*", "types/*.d.ts", "../types/*.d.ts", "../shared/*", "../shared/**/*"],
	"exclude": ["node_modules", "esbuild.mjs"],
	"references": [{ "path": "../shared" }]
}
