{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"lib": ["WebWorker", "ESNext"],
		"rootDir": ".",
		"baseUrl": "src",
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": ["./src/**/*", "./types/*.d.ts", "esbuild.ts"],
	"exclude": ["**/dist", "**/.dist", "node_modules/**/tsconfig.json", "**/vitest.config.ts.*"],
	"references": [{ "path": "../shared" }, { "path": "../scripts" }]
}
