{
	"$schema": "https://turbo.build/schema.json",
	"extends": [
		"//"
	],
	"pipeline": {
		"build": {
			"outputs": [
				"../dist/sw/**"
			],
			"inputs": [
				"esbuild.ts",
				"tsconfig.app.json",
				"src/**",
				"../dist/client/index.html",
				"../dist/client/assets/**",
				"../assets/src/**"
			],
			"dependsOn": [
				"client#build",
				"scripts#build"
			]
		},
		"tsc": {
			"dependsOn": [
				"scripts#build"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"outputs": [
				"../client/public/sw.js"
			],
			"dependsOn": [
				"scripts#build"
			]
		}
	}
}