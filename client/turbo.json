{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"build": {
			"inputs": [
				"src/**",
				"vite.config.ts",
				"public/**",
				"src/**",
				"index.html",
				"main.tsx",
				"tsconfig.app.json",
				"../assets/src/**"
			],
			"outputs": ["../dist/client/**"],
			"dependsOn": ["scripts#build"]
		},
		"tsc:tools": {
			"inputs": [
				"vite.config.ts",
				"vitest.config.ts",
				"types/*.d.ts",
				"../types/*.d.ts",
				"../scripts/src/**/*.ts",
				"tsconfig.json",
				"tsconfig.tools.json"
			]
		},
		"tsc:build:css": {
			"inputs": ["src/**/*.module.css"],
			"outputs": ["src/**/*.module.css.d.ts"]
		},
		"tsc:app": {
			"inputs": [
				"main.tsx",
				"types/vite.d.ts",
				"src/**/*.ts",
				"src/**/*.tsx",
				"types/*.d.ts",
				"../types/*.d.ts",
				"../shared/src/**/*.ts",
				"tsconfig.json",
				"tsconfig.app.json"
			],
			"dependsOn": ["client#tsc:build:css"]
		},
		"tsc": {
			"dependsOn": ["client#tsc:tools", "client#tsc:app"]
		},
		"test": {
			"dependsOn": ["scripts#build"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["scripts#build"]
		}
	}
}
