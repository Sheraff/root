{
	"name": "fullstack-typescript-project",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:client": "vite --config ./client/vite.config.ts",
		"dev:sw": "esbuild ./client/sw/index.ts --outfile=./client/public/sw.js --sourcemap --bundle --watch --loader:.sql=text",
		"dev:server": "esbuild-dev --watch --platform=node --target=node20 --format=esm --sourcemap --allow-overwrite --packages=external --keep-names --loader:.sql=text ./server/src/app.ts",
		"dev": "(trap 'kill 0' SIGINT; pnpm dev:server & pnpm dev:client & pnpm dev:sw)",
		"test:client": "vitest --config ./client/vitest.config.ts",
		"test:server": "vitest --config ./server/vitest.config.ts",
		"test:shared": "vitest --config ./shared/vitest.config.ts",
		"test": "(trap 'kill 0' SIGINT; pnpm test:server & pnpm test:client & pnpm test:shared)",
		"build:client": "vite build --config ./client/vite.config.ts",
		"build:sw": "esbuild ./client/sw/index.ts --outfile=./client/public/sw.js --sourcemap --bundle --minify-syntax --keep-names --loader:.sql=text",
		"build:server": "esbuild ./server/src/app.ts --platform=node --target=node20 --format=esm --outdir=dist/server --allow-overwrite --packages=external --bundle --minify-syntax --keep-names --loader:.sql=text",
		"build": "pnpm build:sw && pnpm build:client && pnpm build:server",
		"serve": "NODE_ENV=production node --env-file=.env dist/server/app.js",
		"clear": "rm -rf dist; rm -rf node_modules;",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --check . --config ./.prettierrc --log-level warn",
		"format:fix": "prettier --write . --config ./.prettierrc --log-level warn",
		"ts-check:server": "tsc --noEmit --project ./server/tsconfig.json",
		"ts-check:client": "tsc --noEmit --project ./client/tsconfig.json",
		"ts-check:sw": "tsc --noEmit --project ./client/sw/tsconfig.json",
		"ts-check": "pnpm ts-check:server && pnpm ts-check:client && pnpm ts-check:sw"
	},
	"dependencies": {
		"@fastify/cookie": "^9.2.0",
		"@fastify/session": "^10.6.1",
		"@fastify/static": "6.12.0",
		"better-sqlite3": "^9.2.2",
		"dotenv": "^16.3.1",
		"fastify": "^4.24.3",
		"grant": "^5.4.22",
		"pino-pretty": "10.2.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"valibot": "0.22.0"
	},
	"devDependencies": {
		"@hyrious/esbuild-dev": "^0.10.4",
		"@types/better-sqlite3": "^7.6.8",
		"@types/node": "20.10.4",
		"@types/react": "18.2.42",
		"@types/react-dom": "18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"@vitejs/plugin-react": "^4.2.1",
		"esbuild": "0.19.8",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-react": "^7.33.2",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.0",
		"prettier-eslint": "^16.1.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.6",
		"vite-tsconfig-paths": "4.2.1",
		"vitest": "^1.0.2"
	},
	"engines": {
		"node": ">=20.9.0"
	}
}
