{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"tsc": {
			"inputs": ["*", "**/*", "../types/**", "../scripts/dist/**"],
			"outputs": [".dist"],
			"dependsOn": ["scripts#tsc"]
		},
		"test": {
			"inputs": ["../scripts/dist/**"],
			"dependsOn": ["scripts#tsc"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
