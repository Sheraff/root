{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"tsc:tools": {
			"inputs": [
				"vitest.config.ts",
				"../types/*.d.ts",
				"../script/src/**/*.ts",
				"tsconfig.json",
				"tsconfig.tools.json"
			]
		},
		"tsc:lib": {
			"inputs": [
				"**/*.ts",
				"types/*.d.ts",
				"../types/*.d.ts",
				"!vitest.config.ts",
				"tsconfig.json",
				"tsconfig.lib.json"
			]
		},
		"tsc": {
			"dependsOn": ["@repo/shared#tsc:tools", "@repo/shared#tsc:lib"]
		},
		"test": {
			"dependsOn": ["@repo/script#build"]
		}
	}
}
