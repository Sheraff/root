{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": "..",
		"baseUrl": ".",
		"outDir": ".dist",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"composite": true,
		"incremental": true,
		"sourceMap": true,
		"declarationMap": true,
		"paths": {
			"~/*": ["./*"]
		}
	},
	"watchOptions": {
		// "excludeDirectories": ["**/node_modules"]
	},
	"include": ["./**/*.ts", "../types/*.d.ts", "vitest.config.ts", "vitest.config.ts.*"]
	// "references": [{ "path": "../scripts" }]
}
