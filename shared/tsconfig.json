{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": ".dist",
		"rootDir": ".",
		"baseUrl": "src",
		"sourceMap": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"composite": true,
		"paths": {
			"~/*": ["./*"],
		},
	},
	"watchOptions": {
		// "excludeDirectories": ["**/node_modules"]
		"excludeFiles": ["vitest.config.ts"],
	},
	"exclude": ["node_modules", ".turbo"],
	"include": ["./src/**/*", "vitest.config.ts", "./types/*.d.ts"],
	"references": [{ "path": "../scripts" }],
}
