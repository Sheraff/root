{
	"$schema": "https://turbo.build/schema.json",
	"extends": [
		"//"
	],
	"pipeline": {
		"build": {
			"outputs": [
				"../dist/server/**",
				"../dist/schemas/**"
			],
			"inputs": [
				"../assets/src/**",
				"esbuild.ts",
				"tsconfig.app.json",
				"src/**"
			],
			"dependsOn": [
				"scripts#tsc"
			]
		},
		"tsc": {
			"dependsOn": [
				"scripts#tsc"
			]
		},
		"test": {
			"dependsOn": [
				"scripts#tsc"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": [
				"scripts#tsc"
			]
		}
	}
}