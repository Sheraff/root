{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"pipeline": {
		"build": {
			"outputs": ["../dist/server/**", "../dist/schemas/**"],
			"dependsOn": ["shared#tsc", "scripts#tsc"]
		},
		"tsc": {
			"dependsOn": ["shared#tsc", "scripts#tsc"],
			"inputs": ["*", "**/*", "../shared/.dist/**", "../scripts/.dist/**", "../types/**"]
		},
		"test": {
			"inputs": ["../shared/.dist/**", "../scripts/.dist/**"],
			"dependsOn": ["shared#tsc", "scripts#tsc"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"inputs": ["../shared/.dist/**", "../scripts/.dist/**"],
			"dependsOn": ["shared#tsc", "scripts#tsc"]
		}
	}
}
