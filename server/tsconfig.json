{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": "src",
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"paths": {
			"~/*": ["./*"],
		},
		"types": ["vitest/importMeta"],
	},
	"exclude": ["node_modules", ".turbo"],
	"include": [
		"./src/**/*.ts",
		"../types/*.d.ts",
		"vitest.config.ts",
		"vitest.setup.ts",
		"esbuild.ts",
	],
	"references": [{ "path": "../shared" }, { "path": "../scripts" }],
}
