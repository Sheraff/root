{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "..",
		"baseUrl": ".",
		"outDir": "dist",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"paths": {
			"~/*": ["./src/*"],
			"@shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*.ts", "types/*.d.ts", "../shared/**/*.ts", "../types/*.d.ts"],
	"exclude": ["../node_modules", "../dist"]
}
