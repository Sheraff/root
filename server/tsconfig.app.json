{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["ESNext"],
		"outDir": "../dist/server",
		"types": ["node", "vitest/importMeta"],
		"verbatimModuleSyntax": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/*.d.ts",
		"../types/*.d.ts",
		"../shared/src/**/*.ts",
		"../script/src/**/*.ts"
	]
	// "exclude": ["src/api/*.ts"]
}
