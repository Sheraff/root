{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"ESNext"
		],
		"outDir": "../dist/server",
		"types": [
			"node",
			"vitest/importMeta",
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/*.d.ts",
		"../types/*.d.ts",
		"../shared/src/**/*.ts",
		"../scripts/src/**/*.ts",
	],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts",
	]
}