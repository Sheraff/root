{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {},
		"//#root:test": {
			"dependsOn": ["script#build"],
			"cache": false
		},
		"tsc": {},
		"//#root:tsc": {
			"dependsOn": ["//#root:tsc:tools", "//#root:tsc:app"],
			"inputs": ["package.json"]
		},
		"//#root:tsc:app": {
			"inputs": ["./tsconfig.app.json", "pnpm-lock.yaml", "package.json", "types/*.d.ts"]
		},
		"//#root:tsc:tools": {
			"inputs": [
				"./tsconfig.tools.json",
				"pnpm-lock.yaml",
				"package.json",
				"vitest.workspace.ts"
			]
		},
		"lint": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"//#root:lint": {
			"inputs": ["./.eslintrc.json", "pnpm-lock.yaml", "package.json", "*.ts", "types/*.ts"]
		},
		"lint:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"//#root:lint:fix": {
			"inputs": ["./.eslintrc.json", "pnpm-lock.yaml", "package.json", "*.ts", "types/*.ts"]
		},
		"format": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"//#root:format": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"format:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"//#root:format:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"spell": {
			"inputs": ["$TURBO_DEFAULT$", "./.cspell.json", "./repo.dict.txt"]
		},
		"//#root:spell": {
			"inputs": ["$TURBO_DEFAULT$", "./.cspell.json", "./repo.dict.txt"]
		},
		"clear": {
			"cache": false
		},
		"//#root:clear": {
			"cache": false
		},
		"analyze": {
			"cache": false
		}
	},
	"globalDotEnv": [".env"],
	"globalDependencies": [
		"tsconfig.base.json",
		".env",
		"types/*.d.ts",
		".eslintrc.json",
		".prettierrc.json",
		"package.json"
	]
}
