{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"build": {},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {},
		"//#root:test": {
			"dependsOn": ["script#build"],
			"cache": false
		},
		"tsc": {},
		"lint": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"//#root:lint": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"lint:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"//#root:lint:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.eslintrc.json"]
		},
		"format": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"//#root:format": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"format:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"//#root:format:fix": {
			"inputs": ["$TURBO_DEFAULT$", "./.prettierrc.json"]
		},
		"spell": {
			"inputs": ["$TURBO_DEFAULT$", "./.cspell.json", "./repo.dict.txt"]
		},
		"//#root:spell": {
			"inputs": ["$TURBO_DEFAULT$", "./.cspell.json", "./repo.dict.txt"]
		},
		"clear": {
			"cache": false
		},
		"//#root:clear": {
			"cache": false
		},
		"analyze": {
			"cache": false
		}
	},
	"globalDotEnv": [".env"],
	"globalDependencies": [
		"tsconfig.base.json",
		".env",
		"types/*.d.ts",
		".eslintrc.json",
		".prettierrc.json",
		"package.json"
	]
}
